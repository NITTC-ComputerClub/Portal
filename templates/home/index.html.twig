{% extends 'base.html.twig' %}

{% block body %}
    <div class="text-center">
        {% if app.user %}
            <h1 class="display-4">
                Welcome back, {{ app.user.username }}!
            </h1>
            <p class="lead">You are already logged in.</p>
        {% else %}
            <h1 class="display-4">
                Welcome to Portal!
            </h1>
            <p class="lead">You are not logged in.</p>
        {% endif %}
    </div>
{% endblock %}
