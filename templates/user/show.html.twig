{% extends 'base.html.twig' %}

{% block title %}User Detail{% endblock %}

{% block body %}
    <div class="page-title mb-4">
        {% if user.name %}
            <h2>
                <i class="fas fa-user fa-fw"></i>
                <ruby>
                    <rb>{{ user.name.lastName }}</rb>
                    <rt>{{ user.name.lastNameKana }}</rt>
                </ruby>
                <ruby>
                    <rb>{{ user.name.firstName }}</rb>
                    <rt>{{ user.name.firstNameKana }}</rt>
                </ruby>
                <small class="text-muted">{{ user.username }}</small>
            </h2>
        {% else %}
            <h2>
                <i class="fas fa-user fa-fw"></i>
                {{ user.username }}
            </h2>
        {% endif %}
        <p class="lead">About the user.</p>
    </div>
    <ul>
        <li>
            <b>Student ID:</b>
            {{ user.studentId }}
        </li>
        <li>
            <b>Birthday:</b>
            {{ user.birthday | date('Y/m/d') }}
        </li>
    </ul>
{% endblock %}
