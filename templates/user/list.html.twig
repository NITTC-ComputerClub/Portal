{% extends 'base.html.twig' %}

{% block title %}User List{% endblock %}

{% block body %}
    <div class="page-title mb-4">
        <h2 class="mb-0">
            <i class="fas fa-users fa-fw"></i>
            Users
        </h2>
        <p class="lead">Show or edit users in this app.</p>
    </div>
    <div class="actions mb-3">
        <a href="{{ url('user_create') }}"
           class="btn btn-primary"
        >
            <i class="fas fa-plus"></i>
            Create
        </a>
    </div>
    <div class="row">
        {% for user in users %}
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            {%- if user.name -%}
                                <span>{{ user.name.lastName }}</span>
                                <span>{{ user.name.firstName }}</span>
                            {%- else -%}
                                {{ user.username }}
                            {%- endif -%}
                        </h5>
                        <h6 class="card-subtitle mb-2 text-muted">
                            {%- if user.name -%}
                                {{ user.username }}
                            {%- endif -%}
                        </h6>
                        <a href="{{ url('user', {'id': user.id}) }}"
                           class="btn btn-outline-primary mt-2"
                        >
                            <i class="fas fa-info-circle"></i>
                            Details
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
