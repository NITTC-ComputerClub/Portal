{% extends 'base.html.twig' %}

{% block title %}User List{% endblock %}

{% block body %}
    <div class="row">
        {% for user in users %}
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            {%- if user.name -%}
                                <span>{{ user.name.lastName }}</span>
                                <span>{{ user.name.firstName }}</span>
                            {%- else -%}
                                {{ user.username }}
                            {%- endif -%}
                        </h5>
                        <h6 class="card-subtitle mb-2 text-muted">
                            {%- if user.name -%}
                                {{ user.username }}
                            {%- endif -%}
                        </h6>
                        <a href="{{ url('user', {'id': user.id}) }}"
                           class="btn btn-outline-primary mt-2"
                        >
                            Details
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
